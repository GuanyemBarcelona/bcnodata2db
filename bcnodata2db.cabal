  other-extensions: GADTs
                  , GeneralizedNewtypeDeriving
                  , MultiParamTypeClasses
                  , OverloadedStrings
                  , QuasiQuotes
                  , TemplateHaskell
                  , TypeFamilies
  build-depends: base >=4.7 && <4.8
               , bytestring
               , containers
               , exceptions
               , http-conduit
               , lens
               , monad-logger >= 0.3.11.1
               , network
               , optparse-applicative
               , persistent
               , persistent-postgresql
               , persistent-template
               , text >=1.1 && <1.2
               , transformers >= 0.3.0.0
               , xml-conduit
               , xml-lens
